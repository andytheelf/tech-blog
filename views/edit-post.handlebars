<article class="uk-container uk-container-large" >
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <div class="uk-margin">
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      <span>({{format_url post.post_url}})</span>
    </div>
    <div>
        by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="uk-button-default">Save post</button>
    <button type="button" class="delete-post-btn uk-button-default">Delete post</button>
  </form>
  </div>
  <div>
  <form class="comment-form">
  
    <textarea class="uk-text-area" name="comment-body"></textarea>
  </div>

  <div>
    <button class="uk-button-default"type="submit">add comment</button>
  </div>
</form>
</div>
{{> comments post.comments }}
</article>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>